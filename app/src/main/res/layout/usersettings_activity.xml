<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lighterGrey">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/user"
        android:id="@+id/UserImage"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Name: "
        android:layout_below="@+id/UserImage"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:id="@+id/UserName"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserName"
        android:text="Email: "
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/UserEmail"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/UserEmail"
        android:text="Phone Number: "
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:id="@+id/UserPhoneNumber"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/UserName"
        android:layout_below="@+id/UserImage"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/darkerBlue"
        android:id="@+id/UserNameEntered"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/UserEmail"
        android:layout_below="@id/UserName"
        android:layout_marginTop="50dp"
        android:textSize="20dp"
        android:textColor="@color/darkerBlue"
        android:id="@+id/UserEmailEntered"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/UserPhoneNumber"
        android:layout_below="@id/UserEmail"
        android:layout_marginTop="55dp"
        android:textSize="20dp"
        android:id="@+id/UserPhoneNumberEntered"
        />





</RelativeLayout>